@model Webapp.Models.CompleteRegistration
@{
    ViewBag.Title = "Add user";
}

@{
    ViewBag.Title = "Confirm Email";
}

<main aria-labelledby="title">
    <div class="card shadow">
        <div class="card-header">
            <h3>Add user</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("ConfirmEmail", "Account", FormMethod.Post, new { role = "form", @class = "p-lg-5 p-sm-1", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.Code)
                @Html.HiddenFor(x => x.UserId)
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="row mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.ProfilePicture, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.ProfilePicture, new { @class = "form-control", type = "file" })
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-primary">Complete registration</button>
            }
        </div>
    </div>

</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

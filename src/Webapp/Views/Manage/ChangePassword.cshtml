@model Webapp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<main aria-labelledby="title">
    <div class="card shadow">
        <div class="card-header">
            <h3>Change password</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form", @class = "p-lg-5 p-sm-1" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="row mb-3">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row mb-3">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-primary">Change password</button>
            }
        </div>
    </div>

</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}